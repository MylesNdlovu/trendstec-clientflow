{
	"name": "trendstec-client-flow",
	"private": true,
	"version": "1.0.1",
	"type": "module",
	"description": "TRENDSTEC Client Flow - MT5 Lead Tracking and Management System",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync && prisma generate",
		"postinstall": "playwright install --with-deps chromium",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:generate": "prisma generate",
		"db:push": "prisma db push",
		"db:migrate": "prisma migrate dev",
		"db:studio": "prisma studio",
		"db:seed": "tsx prisma/seed.ts",
		"test": "playwright test",
		"test:headed": "playwright test --headed",
		"test:ui": "playwright test --ui",
		"test:debug": "playwright test --debug",
		"test:chromium": "playwright test --project=chromium",
		"test:firefox": "playwright test --project=firefox",
		"test:webkit": "playwright test --project=webkit",
		"test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
		"test:report": "playwright show-report test-results/html",
		"test:codegen": "playwright codegen http://localhost:5173",
		"spec:sync": "node .specify/scripts/sync-specs-to-tests.js",
		"setup:systeme-workflows": "tsx scripts/setup-systeme-workflows.ts",
		"spec:validate": "node .specify/scripts/validate-spec-coverage.js",
		"pretest": "npm run spec:sync",
		"mcp:build": "cd mcp-servers/mt5-playwright && npm install && npm run build",
		"mcp:start": "cd mcp-servers/mt5-playwright && npm start",
		"scraper:test": "node scripts/test-scraper.js",
		"setup": "npm install && npm run db:push && npm run mcp:build"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.19.1",
		"@prisma/client": "^5.6.0",
		"@xyflow/svelte": "^0.1.39",
		"bcrypt": "^6.0.0",
		"bcryptjs": "^2.4.3",
		"form-data": "^4.0.4",
		"jsonwebtoken": "^9.0.2",
		"lucide-svelte": "^0.460.0",
		"mailgun.js": "^12.1.1",
		"playwright": "^1.55.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-vercel": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/bcrypt": "^6.0.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.5",
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.32",
		"prisma": "^5.6.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.3.6",
		"tsx": "^4.20.6",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	}
}
