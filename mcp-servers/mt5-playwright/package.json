{
  "name": "mcp-mt5-playwright",
  "version": "1.0.0",
  "description": "MCP server for MT5 web scraping using Playwright",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsc --watch & node --watch dist/index.js",
    "dev:http": "tsc --watch & node --watch dist/http-server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "playwright": "^1.55.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "typescript": "^5.0.0"
  }
}